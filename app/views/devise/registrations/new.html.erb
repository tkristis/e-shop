<div class="container user-registration">
  <div class="row">
    <center><h2>Vape Shop Account Registration</h2></center>
    <div class="col-md-6 col-sm-6 col-xs-12 left">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :First_name %><br />
        <%= f.text_field :first_name, autofocus: true, required: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :Last_name %><br />
        <%= f.text_field :last_name, autofocus: true, required: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :Date_of_birth %><br />
        <%= f.date_field :date_of_birth, type: "date", :required => true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

    </div>
    <div class="col-md-6 col-sm-6 col-xs-12 right">

      <div class="field form-group">
        <%= f.label :address %>
        <%= f.text_field :address, required: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :house_number %>
        <%= f.text_field :home_number, required: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :country %>
        <%= f.text_field :country, required: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :city %>
        <%= f.text_field :city, required: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :postcode %>
        <%= f.text_field :postcode, required: true, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, placeholder: "number with country code", required: true, class: "form-control" %>
      </div>
      
    </div>
  </div>
  <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block", id: "submit" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
</div>
