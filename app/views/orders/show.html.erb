<div class="container">
  
  <div class="row">
    <div class="name text-center">
      <h1 class="title text-default">
      Order #<%= @order.id %>
      </h1>
    </div>
    <div class="col-md-6 col-md-offset-3">
      <%= image_tag(@order.product.image_url, :class => "img-responsive") %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h4 class="text-success"> Product: <%= @order.product.name %></h4>
      <h4 class="text-secondary"> Category: <%= @order.product.category.name %></h4>
      <h4 class="text-secondary"> <%= "Price: #{@order.total}" %>&pound;</h4>
    </div>
  </div>
</div>

<br><br>

<div class="text-center">
  <%= link_to 'Browse All Orders', orders_path, :class => "btn btn-default" %></div>
</div>