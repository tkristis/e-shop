<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :category %><br>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select one!", class: "form-control") %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
  <%= f.label :year_of_manufacture %>
  <%= f.text_field :year_of_manufacture, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
  <%= f.label :color %>
  <%= f.text_field :color, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price, class: "form-control" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
