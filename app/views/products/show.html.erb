<% if signed_in? && current_user.admin? %>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
<% end %>
      
<div class="container show-product">
  <div class="row" data-product-id="<%= @product.id %>">

    <div class="col-md-6 col-xs-12 show-product-left">
      <%= image_tag(@product.image_url, class: "img-zoom img-responsive", id: "product-img", data_zoom_image: "true") %>
    </div>

    <div class="col-md-6 col-xs-12 show-product-right">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
      <br>
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
      <br>
      <p>
        <strong>Year of manufacture:</strong>
        <%= @product.year_of_manufacture %>
      </p>
      <br>
      <% if @product.respond_to?(:color) && @product.color.present? %>
      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>
      <% end %>
      <br>
      <p>
        &pound; <%= @product.price %>
      </p>
      <br>
      <p>
        <strong>Average Rating:</strong> 
        <div class="rated" id="average_rating" data-score="<%= @product.average_rating %>"></div> 
      </p>
      <br>
      <!-- Payment button -->
      <%= form_tag "/payments/create" do %>
      <%= render partial: "shared/stripe_checkout_button" %>
      <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>

    </div>
  

    <div class="col-md-8 col-xs-12 comment-rate-product">

      <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
      <p><%= render partial: 'new_comment' %></p>
      <p><%= render partial: 'comments' %></p>
      
      <br><br>
      <div class="digg_pagination">
        <div class="page_info">
          <%= page_entries_info @comments %>
        </div>
        <%= will_paginate @comments, :container => false %>
      </div>

    </div>
  </div>
</div>

