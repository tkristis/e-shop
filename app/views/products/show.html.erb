<div class="container show-product">
  <div class="row">
    
    <div class="col-md-6 col-xs-12 show-product-left">
      <%= image_tag @product.image_url, class: "img-responsive", size: "450x400" %>
    </div>

    <div class="col-md-6 col-xs-12 show-product-right">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>

      <p>
        <strong>Year of manufacture:</strong>
        <%= @product.year_of_manufacture %>
      </p>

      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>

      <p>
        <strong>Price:</strong><i class="glyphicon glyphicon-usd"></i>
        <%= @product.price %>
      </p>

      <p>
        <strong>Average Rating:</strong> 
        <div class="rated" data-score="<%= @product.average_rating %>"></div> 
      </p>

      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>

  </div>
  <div class="row">

    <div class="col-md-8 comment-rate-product">
      <p><%= render partial: 'new_comment' %></p>
      <p><%= render partial: 'comments' %></p>
      
      <div class="digg_pagination">
        <div class="page_info">
        <%= page_entries_info @comments %>
        </div>
      <%= will_paginate @comments, :container => false %>
      </div>
      
    </div>
  </div>
</div>

